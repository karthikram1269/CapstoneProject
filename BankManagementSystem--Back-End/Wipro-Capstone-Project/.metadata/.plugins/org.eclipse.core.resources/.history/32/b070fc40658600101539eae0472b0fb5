package com.bank.payment.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.bank.payment.dto.NotificationDTO;

@FeignClient(name = "notification-service", url = "http://localhost:8083/notifications")
public interface NotificationFeignClient {

    @PostMapping("/send")
    String sendNotification(@RequestBody NotificationDTO dto);
}
