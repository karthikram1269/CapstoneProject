package com.bank.payment.controller;

import lombok.extern.slf4j.Slf4j;
import org.springframework.web.bind.annotation.*;

import com.bank.payment.dto.PaymentRequest;
import com.bank.payment.entity.Payment;
import com.bank.payment.service.PaymentService;

@Slf4j
@RestController
@RequestMapping("/payments")
public class PaymentController {

	private final PaymentService service;

    public PaymentController(PaymentService service) {
        this.service = service;
    }

    @PostMapping("/transfer")
    public Payment doPayment(@RequestBody PaymentRequest request) {
        return service.doPayment(request);
    }
}
