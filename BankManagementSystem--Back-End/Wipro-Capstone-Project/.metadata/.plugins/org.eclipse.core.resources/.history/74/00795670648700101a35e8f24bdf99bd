package com.bank.payment.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PostMapping;

import com.bank.payment.dto.NotificationRequest;

@FeignClient(name = "notification-service", url = "http://localhost:8083/api/notifications")
public interface NotificationClient {
    @PostMapping("/send-both")
    void sendToBoth(NotificationRequest request);
}
